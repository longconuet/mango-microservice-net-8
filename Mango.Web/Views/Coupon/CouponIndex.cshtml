@model IEnumerable<CouponDto>

<div>
    <h1>Coupons List</h1>
    <div class="row mb-3 mt-5">
        <div class="col-auto text-right">
            <a class="btn btn-success" asp-action="CouponCreate">
                <i class="bi bi-plus-lg"></i> Create New Coupon
            </a>
        </div>
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Code</th>
                    <th scope="col">Discount Amount</th>
                    <th scope="col">Minimun Amount</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coupon in Model)
                {
                    <tr>
                        <td>@coupon.CouponCode</td>
                        <td>@((coupon.DiscountAmount).ToString("c"))</td>
                        <td>@((coupon.MinAmount).ToString("c"))</td>
                        <td class="text-center">
                            <a asp-action="CouponDelete" asp-route-couponId="@coupon.CouponId" class="btn btn-danger" title="Delete"><i class="bi bi-trash3"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>